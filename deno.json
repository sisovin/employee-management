{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env src/app.ts",
    "test": "deno test --allow-net --allow-read --allow-env"
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
